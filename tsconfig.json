{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["src/*.test.ts", "src/**/*.test.ts", "src/*.spec.ts", "src/**/*.spec.ts", "tests/*.ts", "tests/**/*.ts"]
}